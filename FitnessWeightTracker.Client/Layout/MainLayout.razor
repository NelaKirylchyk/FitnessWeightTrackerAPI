@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject FitnessWeightTracker.Client.Services.AuthService AuthService
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-end align-items-center">
            <AuthorizeView>
                <Authorized>
                    <span class="me-2">Hello, @context.User.Identity?.Name</span>
                    <button class="btn btn-link" @onclick="Logout">Logout</button>
                </Authorized>
                <NotAuthorized>
                    <NavLink class="nav-link" href="login">Login</NavLink>
                    <NavLink class="nav-link" href="register">Register</NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/");
    }
}
